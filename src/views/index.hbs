{{#> layouts/main }}
<div class="container">
    {{#each movies}}
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="https://image.tmdb.org/t/p/original/{{image}}" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{overview}}</p>
                    <p class="card-text"><small class="text-muted">{{dateTimeFormat releaseDate}}</small></p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/layouts/main}}