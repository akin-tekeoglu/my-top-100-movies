{{#> layouts/main }}
<div class="container d-flex flex-column justify-content-center">
    {{#each movies}}
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="https://image.tmdb.org/t/p/original/{{image}}" class="img-fluid rounded-start">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{title}} <span class="badge bg-primary">{{vote}} </span> <span class="badge bg-info text-dark">{{voteCount}} </span> <span class="badge bg-secondary">{{language}}</span></h5>
                    <p class="card-text">{{overview}}</p>
                    <a href="/movie/{{id}}">Details</a>
                    <p class="card-text"><small class="text-muted">{{dateTimeFormat releaseDate}}</small></p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/layouts/main}}